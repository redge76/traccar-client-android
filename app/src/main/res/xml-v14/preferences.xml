<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="status"
        android:summaryOff="@string/settings_status_off_summary"
        android:summaryOn="@string/settings_status_on_summary"
        android:title="@string/settings_status_title" />

    <EditTextPreference
        android:key="id"
        android:title="@string/settings_id_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="foreground"
        android:summary="@string/settings_foreground_summary"
        android:title="@string/settings_foreground_title" />

    <PreferenceCategory
        android:key="pref_cat_gps"
        android:title="@string/pref_cat_gps">

        <ListPreference
            android:defaultValue="gps"
            android:entries="@array/settings_provider_names"
            android:entryValues="@array/settings_provider_values"
            android:key="provider"
            android:summary="@string/settings_provider_summary"
            android:title="@string/settings_provider_title" />


    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_cat_http_backend"
        android:title="@string/pref_cat_http_backend">

        <SwitchPreference
            android:defaultValue="false"
            android:key="http_backend_status"
            android:summaryOff="@string/settings_http_backend_status_off_summary"
            android:summaryOn="@string/settings_http_backend_status_on_summary"
            android:title="@string/settings_http_backend_status_title" />

        <EditTextPreference
            android:defaultValue="demo.traccar.org"
            android:key="address"
            android:summary="@string/settings_address_summary"
            android:title="@string/settings_address_title" />

        <EditTextPreference
            android:defaultValue="5055"
            android:key="port"
            android:numeric="integer"
            android:summary="@string/settings_port_summary"
            android:title="@string/settings_port_title" />

        <EditTextPreference
            android:defaultValue="300"
            android:key="interval"
            android:numeric="integer"
            android:summary="@string/settings_interval_summary"
            android:title="@string/settings_interval_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="http_backend_exact_time"
            android:summary="@string/settings_http_backend_exact_time_summary"
            android:title="@string/settings_http_backend_exact_time_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="http_backend_only_wifi"
            android:summary="@string/settings_http_backend_only_wifi_summary"
            android:title="@string/settings_http_backend_only_wifi_title" />

    </PreferenceCategory>


    <PreferenceScreen
        android:key="pref_screen_tracking_sms"
        android:title="@string/pref_screen_tracking_sms">

        <PreferenceCategory
            android:key="pref_cat_sms_backend"
            android:title="@string/pref_cat_sms_backend">

            <SwitchPreference
                android:defaultValue="false"
                android:key="sms_backend_status"
                android:summaryOff="@string/settings_sms_backend_status_off_summary"
                android:summaryOn="@string/settings_sms_backend_status_on_summary"
                android:title="@string/settings_sms_backend_status_title" />

            <EditTextPreference
                android:defaultValue=""
                android:key="sms_backend_number"
                android:numeric="integer"
                android:summary="@string/settings_sms_backend_number_summary"
                android:title="@string/settings_sms_backend_number_title" />

            <EditTextPreference
                android:defaultValue="120"
                android:key="sms_backend_no_send_time_limit"
                android:numeric="integer"
                android:summary="@string/settings_sms_backend_send_time_limit_summary"
                android:title="@string/settings_sms_backend_send_time_limit_title" />

            <EditTextPreference
                android:defaultValue="120"
                android:key="sms_backend_period"
                android:numeric="integer"
                android:summary="@string/settings_sms_backend_interval_summary"
                android:title="@string/settings_sms_backend_interval_title" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="sms_backend_exact_time"
                android:summary="@string/settings_sms_backend_exact_time_summary"
                android:title="@string/settings_sms_backend_exact_time_title" />

            <CheckBoxPreference
                android:defaultValue="true"
                android:key="sms_backend_play_sound"
                android:summary="@string/settings_sms_backend_play_sound_summary"
                android:title="@string/settings_sms_backend_play_sound_title" />


        </PreferenceCategory>

        <PreferenceCategory
            android:key="pref_cat_sms_sos"
            android:title="@string/pref_cat_sos_sms">

            <EditTextPreference
                android:defaultValue=""
                android:key="sms_sos_numbers"
                android:numeric="integer"
                android:summary="@string/settings_sms_sos_numbers_summary"
                android:title="@string/settings_sms_sos_numbers_title" />

            <EditTextPreference
                android:defaultValue="SOS. please Help"
                android:key="sms_sos_text"
                android:numeric="integer"
                android:summary="@string/settings_sms_sos_text_summary"
                android:title="@string/settings_sms_sos_text_title" />

            </PreferenceCategory>
    </PreferenceScreen>

</PreferenceScreen>